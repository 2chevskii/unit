{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "dist/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "dist",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Dvchevskii.Unit",
      "_appTitle": "Dvchevskii.Unit",
      "_enableSearch": true,
      "pdf": false
    },
    "fileMetadata": {
      "_layout": {
        "about.md": "landing"
      }
    }
  }
}